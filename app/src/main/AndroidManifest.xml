<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tomasguti.utnmovil">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="activities.splash.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="activities.MainActivity"
            android:label="@string/app_name" />

        <!-- [START fcm_listener] -->
        <service android:name="notification.MyFcmListenerService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <!-- [END fcm_listener] -->


        <!-- [START instanceId_listener] -->
        <service android:name="notification.MyInstanceIDListenerService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <!-- [END instanceId_listener] -->
        <activity
            android:name="activities.news.NewsActivity"
            android:label="Noticias"
            android:parentActivityName="activities.MainActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="activities.MainActivity" />
        </activity>
        <activity
            android:name="activities.calendar.CalendarActivity"
            android:label="Calendario"
            android:parentActivityName="activities.MainActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="activities.MainActivity" />
        </activity>
        <activity android:name="activities.channels.ChannelsActivity" />
        <activity android:name="activities.news.NewFull" />
        <activity
            android:name="activities.classrooms.ClassroomsActivity"
            android:label="Horarios y Aulas"
            android:parentActivityName="activities.MainActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="activities.MainActivity" />
        </activity>
        <activity
            android:name="activities.subjects.SubjectsActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name="activities.about.AboutActivity"></activity>
    </application>

</manifest>